<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/upcoming_item_padding"
        android:background="@color/white">

        <ImageView
            android:id="@+id/meeting_img"
            android:layout_width="@dimen/upcoming_item_img_dimen"
            android:layout_height="@dimen/upcoming_item_img_dimen"
            android:layout_alignParentEnd="true"
            android:src="@drawable/iconsmeeting" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/meeting_img"
            android:fontFamily="@font/averiasanslibre_regular"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/topic_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/upcoming_txt_margin_top"
            android:fontFamily="@font/averiasanslibre_regular"
            android:text="Topic"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/topic_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/upcoming_txt_margin_top"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_toStartOf="@id/meeting_img"
            android:layout_toEndOf="@id/topic_txt"
            android:fontFamily="@font/averiasanslibre_regular"
            android:text="Lorem Ipsum"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/time_img"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_below="@id/topic_value"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@id/starting_txt"
            android:src="@drawable/timer" />

        <TextView
            android:id="@+id/starting_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic_value"
            android:layout_toStartOf="@id/time_txt"
            android:fontFamily="@font/averiasanslibre_regular"
            android:text="starting in"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic_value"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/averiasanslibre_regular"
            android:text="12hrs"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>