<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".QuickjoinFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView3"
        android:padding="@dimen/_15sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Randomly Join Meeting"
        android:fontFamily="@font/averiasanslibre_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:paddingTop="40dp"
        android:paddingBottom="44dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scrollview_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:visibility="invisible" />




            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:padding="@dimen/_8sdp">

                <Button
                    android:id="@+id/quickjoinButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_button"
                    android:fontFamily="@font/averiasanslibre_bold"
                    android:textSize="@dimen/_60sdp"
                    android:text="JOIN" />


            </RelativeLayout>

    </LinearLayout>


</LinearLayout>